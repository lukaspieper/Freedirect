<Page x:Class="Freedirect.Application.Views.Pages.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:p="clr-namespace:Freedirect.Application.Properties"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:viewModels="clr-namespace:Freedirect.Application.ViewModels.Pages"
      mc:Ignorable="d"
      x:ClassModifier="internal"
      d:DataContext="{d:DesignInstance viewModels:SetupPageViewModel }"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Title="{x:Static p:Resources.Setup}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel>
            <TextBlock Text="{x:Static p:Resources.FirstStep}" Margin="0,0,0,5"/>
            <Button Content="{x:Static p:Resources.DefaultAppsSettings}" Margin="0,0,0,5"
                    Command="{Binding OpenDefaultAppsSettingsCommand}"/>
            <TextBlock Text="{x:Static p:Resources.SecondStep}" Margin="0,0,0,5"/>
            <TextBlock Text="{x:Static p:Resources.ThirdStep}" Margin="0,0,0,5"/>
            <TextBlock Text="{x:Static p:Resources.FourthStep}" Margin="0,0,0,5"/>
        </StackPanel>
    </ScrollViewer>
</Page>
