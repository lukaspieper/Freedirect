<Page x:Class="Freedirect.Application.Views.Pages.SearchEnginesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:p="clr-namespace:Freedirect.Application.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.SearchEngine}" x:ClassModifier="internal"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel >
            <TextBlock Text="{x:Static p:Resources.SearchEngineInfo}"/>
            <TextBlock Text="{x:Static p:Resources.FavouriteSearchEngine}" FontSize="18" Margin="0,10"/>
            <ListBox ItemsSource="{Binding SearchEnginesNames}" SelectedItem="{Binding SelectedSearchEngineName}"/>
            <Button Content="{x:Static p:Resources.DifferentSearchEngine}" Style="{DynamicResource LinkButton}" Margin="0,10"/>
        </StackPanel>
    </ScrollViewer>
</Page>
