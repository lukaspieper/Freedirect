<Page x:Class="Application.View.Pages.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:p="clr-namespace:Application.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.Setup}" x:ClassModifier="internal">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel>
            <TextBlock Text="{x:Static p:Resources.FirstStep}" Margin="0,0,0,5"/>
            <Button Content="{x:Static p:Resources.DefaultAppsSettings}" Margin="0,0,0,5" Click="OpenDefaultAppsSettings" />
            <TextBlock Text="{x:Static p:Resources.SecondStep}" Margin="0,0,0,5"/>
            <TextBlock Text="{x:Static p:Resources.ThirdStep}" Margin="0,0,0,5"/>
            <TextBlock Text="{x:Static p:Resources.FourthStep}" Margin="0,0,0,5"/>
        </StackPanel>
    </ScrollViewer>
</Page>
